{
  "name": "webpack5-sass-swc-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using SASS, PostCSS and SWC",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.config.dev.js",
    "build": "webpack --config config/webpack.config.prod.js",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.css"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack sass",
    "sass",
    "scss",
    "swc"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "1.3.101",
    "copy-webpack-plugin": "13.0.1",
    "cross-env": "7.0.3",
    "css-loader": "6.8.1",
    "css-minimizer-webpack-plugin": "5.0.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-webpack-plugin": "^4.0.1",
    "file-loader": "6.2.0",
    "html-loader": "4.2.0",
    "html-webpack-plugin": "5.6.0",
    "husky": "8.0.3",
    "mini-css-extract-plugin": "2.7.6",
    "normalize.css": "8.0.1",
    "postcss": "8.4.32",
    "postcss-loader": "7.3.3",
    "postcss-preset-env": "9.3.0",
    "prettier": "3.1.1",
    "replace-ext": "2.0.0",
    "sass": "1.69.5",
    "sass-loader": "13.3.2",
    "sass-rem": "4.0.0",
    "style-loader": "3.3.3",
    "swc-loader": "0.2.3",
    "tailwindcss": "3.4.0",
    "terser-webpack-plugin": "5.3.9",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-sass-swc-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "optionalDependencies": {
    "@swc/core-darwin-x64": "1.3.101"
  }
}
