{
  "name": "webpack5-sass-swc-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using SASS, PostCSS and SWC",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.config.dev.js",
    "build": "webpack --config config/webpack.config.prod.js",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.css"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack sass",
    "sass",
    "scss",
    "swc"
  ],
  "author": "Noah Bravo",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "1.14.0",
    "copy-webpack-plugin": "13.0.1",
    "cross-env": "10.1.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.39.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "eslint-webpack-plugin": "5.0.2",
    "file-loader": "6.2.0",
    "html-loader": "5.1.0",
    "html-webpack-plugin": "5.6.4",
    "husky": "9.1.7",
    "mini-css-extract-plugin": "2.9.4",
    "normalize.css": "8.0.1",
    "postcss": "8.5.6",
    "postcss-loader": "8.2.0",
    "postcss-preset-env": "10.4.0",
    "prettier": "3.6.2",
    "replace-ext": "2.0.0",
    "sass": "1.93.3",
    "sass-loader": "16.0.6",
    "sass-rem": "4.0.0",
    "style-loader": "4.0.0",
    "swc-loader": "0.2.6",
    "tailwindcss": "4.1.16",
    "terser-webpack-plugin": "5.3.14",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noahbravo/webpack5-sass-swc-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "optionalDependencies": {
    "@swc/core-darwin-x64": "1.14.0"
  }
}
