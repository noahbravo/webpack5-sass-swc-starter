{
  "name": "webpack5-sass-swc-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using SASS, PostCSS and SWC",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.config.dev.js",
    "build": "webpack --config config/webpack.config.prod.js",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.css"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack sass",
    "sass",
    "scss",
    "swc"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "1.2.135",
    "copy-webpack-plugin": "10.2.2",
    "cross-env": "7.0.3",
    "css-loader": "6.5.1",
    "css-minimizer-webpack-plugin": "3.4.1",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "fibers": "5.0.1",
    "file-loader": "6.2.0",
    "html-loader": "3.1.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "7.0.4",
    "mini-css-extract-plugin": "2.5.3",
    "normalize.css": "8.0.1",
    "postcss": "8.4.5",
    "postcss-loader": "6.2.1",
    "postcss-preset-env": "7.2.3",
    "prettier": "2.5.1",
    "sass": "1.49.0",
    "sass-loader": "12.4.0",
    "sass-rem": "3.0.0",
    "style-loader": "3.3.1",
    "swc-loader": "0.1.15",
    "tailwindcss": "3.0.18",
    "terser-webpack-plugin": "5.3.0",
    "webpack": "5.67.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-sass-swc-starter"
